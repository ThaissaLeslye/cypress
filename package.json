{
  "name": "padrao-cypress-api",
  "private": true,
  "scripts": {
    "setup": "npm ci && npm run open",
    "serverSetup": "npm ci",
    "open": "npx cypress open",
    "pretest": "rm -rf cypress/reports cypress/results",
    "cypress": "npm run pretest && npx cypress run",
    "merge-report": "mkdir -p cypress/results && npx mochawesome-merge cypress/reports/*.json > cypress/results/full_report.json",
    "generate-report": "npx marge --no-code cypress/results/full_report.json -f index.html -o cypress/results",
    "report": "npm run merge-report && npm run generate-report"
  },
  "dependencies": {
    "cypress": "13.4.0",
    "cypress-plugin-steps": "1.1.1"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "cypress-mochawesome-reporter": "^4.0.2",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.2"
  }
}
